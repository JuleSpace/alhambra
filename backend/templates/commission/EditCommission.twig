{# templates/commission/editCommission.twig #}
{% extends 'base.html.twig' %}
{% block title %}Edit Commission{% endblock %}
{% block body %}
    <h1>Edit Commission: {{ commission.nom }}</h1>
    <!-- Bouton pour revenir Ã  la liste des commissions -->
    <div>
        <a href="{{ path('commission_index') }}">
            <button>Back to Commissions List</button>
        </a>
    </div>
    <!-- Nouveau bouton pour revenir au menu principal -->
    <div>
        <a href="{{ path('home') }}">
            <button>Back to Main Menu</button>
        </a>
    </div>
    <form action="{{ path('commission_edit', { 'id': commission.id }) }}" method="post">
        <!-- Champ pour modifier le nom de la commission -->
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="{{ commission.nom }}" required />
        </div>
        <!-- Champ pour modifier la description de la commission -->
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required>{{ commission.description }}</textarea>
        </div>
        <button type="submit" class="create-commission-btn">Update Commission</button>
    </form>
{% endblock %}