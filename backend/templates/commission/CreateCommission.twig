{% extends 'base.html.twig' %}
{% block body %}
    <h1>Create Commission</h1>

    <!-- Bouton pour revenir Ã  la liste des commissions -->
    <div>
        <a href="{{ path('commission_index') }}">
            <button>Back to Commissions List</button>
        </a>
    </div>

    <form action="{{ path('commission_create') }}" method="post">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
        </div>
        
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>

        <div>
            <label for="expiry_date">Expiration Date (Optional):</label>
            <input type="datetime-local" id="expiry_date" name="expiry_date" />
            <small>Leave empty if the commission should be permanent.</small>
        </div>

        <button type="submit" class="create-commission-btn">Create Commission</button>
    </form>
{% endblock %}
