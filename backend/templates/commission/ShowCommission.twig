{% extends 'base.html.twig' %}
{% block body %}
    <h1>Commissions</h1>

    <!-- Bouton pour crÃ©er une commission -->
    <div>
        <a href="{{ path('commission_create') }}">
            <button>Create a Commission</button>
        </a>
    </div>

    <!-- Tableau des commissions -->
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commission in commissions %}
                <tr>
                    <td>{{ commission.nom }}</td>
                    <td>{{ commission.description }}</td>
                    <td>
                        <a href="{{ path('commission_edit', { 'id': commission.id }) }}">
                            <button>Edit</button>
                        </a>
                        <a href="{{ path('commission_users_edit', { 'id': commission.id }) }}">
                            <button>Edit Users</button>
                        </a>
                        <form action="{{ path('commission_delete', { 'id': commission.id }) }}" method="post" style="display:inline;">
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this commission?')">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No commissions found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}