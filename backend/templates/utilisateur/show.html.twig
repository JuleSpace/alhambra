{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>

    <!-- Tableau des utilisateurs -->
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for utilisateur in utilisateurs %}
                <tr id="user-{{ utilisateur.id }}">
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>
                        <!-- Bouton Edit -->
                        <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">
                            <button>Edit</button>
                        </a>

                        <!-- Bouton Delete -->
                        <button class="delete-btn" data-id="{{ utilisateur.id }}" onclick="deleteUser({{ utilisateur.id }})">
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No users found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <script>
        function deleteUser(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                fetch('/utilisateur/' + userId + '/delete', {
                    method: 'DELETE', // Utilisation de la méthode DELETE
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        // Suppression de la ligne dans le tableau après confirmation
                        document.getElementById('user-' + userId).remove();
                    } else {
                        alert('Error deleting user');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the user');
                });
            }
        }
    </script>
{% endblock %}