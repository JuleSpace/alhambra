{# templates/privilege/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un Privilège{% endblock %}

{% block body %}
<h1>Créer un Privilège</h1>

{{ form_start(form) }}
    {{ form_row(form.type) }}
    {{ form_row(form.utilisateur) }}
    {{ form_row(form.commission) }}
