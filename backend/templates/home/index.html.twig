{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Bienvenue sur l'application de gestion de l'association Alhambra</h1>

{% if app.user %}
    <ul>
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('utilisateur_index') }}" class="btn-primary">Gestion des Utilisateurs</a></li>
            <li><a href="{{ path('commission_index') }}" class="btn-primary">Gestion des Commissions</a></li>
        {% endif %}
        <li><a href="{{ path('chat_index') }}" class="btn-primary">Accès au chat</a></li>
    </ul>
    <a href="{{ path('_logout_main') }}" class="btn-primary logout-button">Déconnexion</a> <!-- Appliquer la classe ici -->
{% else %}
    <div class="centered-button">
        <a href="{{ path('login') }}" class="btn-primary">Se connecter</a>
        <p>Pas encore de compte ? <br></br> <a href="{{ path('register') }}" class="btn-primary">S'inscrire</a></p>
    </div>
{% endif %}
{% endblock %}
