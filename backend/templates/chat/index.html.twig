<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Accueil{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Chat - Commission {{ commission.name|default('Globale') }}</h1>

    <div class="card my-4">
        <div class="card-header">
            Messages
        </div>
        <div class="card-body" id="message-list">
            {% if messages is empty %}
                <p class="text-muted">Aucun message pour le moment.</p>
            {% else %}
                {% for message in messages %}
                    <div class="message mb-3">
                        <strong>{{ message.sender }}</strong> <span class="text-muted">({{ message.createdAt }})</span>
                        <p>{{ message.content }}</p>
                        <hr>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Envoyer un message
        </div>
        <div class="card-body">
            <form id="message-form">
                <div class="mb-3">
                    <label for="message-content" class="form-label">Message</label>
                    <textarea class="form-control" id="message-content" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('message-form').addEventListener('submit', function (e) {
        e.preventDefault();

        const content = document.getElementById('message-content').value;

        fetch('/api/chat/messages', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                content: content,
                commission: {{ commission.id|default('null') }}
            }),
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Erreur lors de l\'envoi du message');
            }
            return response.json();
        })
        .then(data => {
            alert(data.status || 'Message envoyé avec succès');
            location.reload(); // Recharge la page pour afficher le nouveau message
        })
        .catch(error => {
            console.error('Erreur :', error);
            alert('Impossible d\'envoyer le message.');
        });
    });
</script>
{% endblock %}
</body>
</html>