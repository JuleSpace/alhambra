{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Chat - Commission {{ commission.name|default('Globale') }}</h1>

<ul>
    {% for commission in commissions %}
        <li>
            <!-- Utilisation de 'commission' plutôt que 'commissionId' -->
            <a href="{{ path('chat_show', {'commissionId': commission.id}) }}">
                Accéder au chat de la commission {{ commission.nom }}
            </a>
        </li>
    {% endfor %}
</ul>
{% endblock %}
