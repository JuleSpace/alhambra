{# templates/post/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
<h1>Liste des Posts</h1>
<ul>
    {% for post in posts %}
        <li>
            {{ post.contenu }} - {{ post.datePublication|date('d/m/Y H:i') }}
            <a href="{{ path('post_show', {id: post.id}) }}">Voir</a>
        </li>
    {% endfor %}
</ul>
<a href="{{ path('post_create') }}" class="btn-secondary" >Cr√©er un nouveau post</a>
{% endblock %}
