{# templates/post/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un Post{% endblock %}

{% block body %}
<h1>Créer un Post</h1>

{{ form_start(form) }}
    {{ form_row(form.contenu) }}
    {{ form_row(form.datePublication) }}
    {{ form_row(form.auteur) }}
    {{ form_row(form.commission) }}
    {{ form_row(form.save) }}
{{ form_end(form) }}

<a href="{{ path('post_index') }}">Retour à la liste</a>
{% endblock %}
