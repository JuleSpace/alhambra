{# templates/privilege/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du Privilège{% endblock %}

{% block body %}
<h1>Détails du Privilège</h1>
<p>Type : {{ privilege.type }}</p>
<p>Utilisateur : {{ privilege.utilisateur.nom }} {{ privilege.utilisateur.prenom }}</p>
<p>Commission : {{ privilege.commission.nom }}</p>

<a href="{{ path('privilege_edit', {id: privilege.id}) }}">Modifier</a>
<a href="{{ path('privilege_index') }}">Retour à la liste</a>
{% endblock %}
